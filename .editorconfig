# EditorConfig 配置文件
# 用于统一不同编辑器的代码风格

root = true

[*]
# 字符集
charset = utf-8
# 缩进风格（spaces | tabs）
indent_style = space
# 缩进大小
indent_size = 2
# 换行符（lf | cr | crlf）
end_of_line = lf
# 是否在文件末尾插入空行
insert_final_newline = true
# 是否删除行尾的空格
trim_trailing_whitespace = true

[*.md]
# Markdown 文件不删除行尾空格
# 因为 Markdown 中两个空格表示换行
trim_trailing_whitespace = false

[Makefile]
# Makefile 文件使用 tab 缩进
indent_style = tab